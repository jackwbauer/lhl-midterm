<% include ./partials/_head.ejs %>
<% include ./partials/_header.ejs %>

<div class="container">
    <div class="row">
        <h1 class="display-4">
            <% for(let item in menu_items) { %>
        </h1>
        <div class="list-group">
            <div class="list-group-item">
                <div class="row">
                    <div class="col-md-3">
                        <img class="food-image" src=<%=menu_items[item].image_url %>>
                    </div>
                    <div class="col-md-7">
                        <h2>
                            <%= menu_items[item].name %>
                        </h2>
                        <h3>
                            <%= menu_items[item].description %>
                        </h3>
                        <h3>
                            <%= `$${menu_items[item].price}` %>
                        </h3>
                    </div>
                    <div class="col-md-2">
                        <button class="btn btn-primary btn-lg">Add to order</button>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
        <p class="lead">
            <a class="btn btn-primary btn-lg" href="/locations/1/menu_items" role="button">Review your order!</a>
        </p>
    </div>
</div>

<% include ./partials/_footer.ejs %>
