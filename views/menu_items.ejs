<% include ./partials/_head.ejs %>
<% include ./partials/_header.ejs %>

<div class="container">
    <div class="row">
        <h1 class="display-4">
            <% for(let item in menu_items) { %>
        </h1>
        <div class="list-group">
            <div class="list-group-item">
                <div class="row">
                    <div class="col-md-3">
                        <img class="food-image" src=<%=menu_items[item].image_url %>>
                    </div>
                    <div class="col-md-7">
                        <h2>
                            <%= menu_items[item].name %>
                        </h2>
                        <h3>
                            <%= menu_items[item].description %>
                        </h3>
                        <h3>
                            <%= `$${menu_items[item].price}` %>
                        </h3>
                    </div>
                    <div class="col-md-2">
                        <button data-menu-item-name="<%= menu_items[item].name %>" data-menu-item-price="<%= menu_items[item].price %>"
                            data-menu-item-id="<%= menu_items[item].id %>" class="add-item btn btn-primary btn-lg">Add
                            to order</button>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
    </div>
    <div class="row">
        <h3>Your Current Order:</h3>
        <div id="order-item-list" class="list-group">

        </div>
    </div>
    <div class="row">
        <form class="lead">
            <button id="place-order" class="btn btn-primary btn-lg" role="button">Place your order!</button>
        </form>
    </div>
</div>

<script src="/scripts/menu_items.js"></script>

<% include ./partials/_footer.ejs %>
<% include ./partials/_tail.ejs %>