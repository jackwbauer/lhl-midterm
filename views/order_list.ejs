<% include ./partials/_head.ejs %>
<% include ./partials/_header.ejs %>

<div class="container">
    <div class="row">
        <div class="list-group">
            <% for (let id in orders) { %>
                <div class="list-group-item">
                    <h3><%= `${orders[id][0].first_name} ${orders[id][0].last_name} (${orders[id][0].phone})` %></h3>
                    <div class="list-group">
                        <% orders[id].forEach((item) => { %>
                            <div class="list-group-item">
                                <h4><%= item.name %></h4>
                                <h5><%= item.comment %></h5>
                            </div>
                        <% }); %>
                        <input class="form-control" name="pickup_time" type="time" data-order-id=<%= id %> >
                        <button class="btn btn-primary btn-lg accept">Accept Order</button>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>

<script src="/scripts/order_list.js"></script>

<% include ./partials/_footer.ejs %>
<% include ./partials/_tail.ejs %>
