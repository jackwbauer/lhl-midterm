function pad(n) {
    return (n < 10) ? ("0" + n) : n;
}

function am_or_pm(hour) {
    if(hour > 13) {
        return 'PM';
    }
    return 'AM';
}

formatPhoneNumber = function (phoneNumber) {
    const phone = phoneNumber.split('');
    const returnNumber = `(${phone[0] + phone[1] + phone[2]}) ${phone[3] + phone[4] + phone[5]}-${phone[6] + phone[7] + phone[8] + phone[9]}`;
    return returnNumber;
}

createHoursString = function (opening, closing) {
    let openTime = `${(opening / 60) % 13}:${pad(opening % 60)} ${am_or_pm(opening)}`;
    let closeTime = `${(closing / 60) % 13}:${pad(closing % 60)} ${am_or_pm(closing)}`;
    console.log(openTime);
    return `${openTime} - ${closeTime}`;
}

