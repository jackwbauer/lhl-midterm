function pad(n) {
    return (n < 10) ? ("0" + n) : n;
}

function am_or_pm(hour) {
    if(hour > 11) {
        return 'PM';
    }
    return 'AM';
}

function getHour(hour) {
    if(hour > 13) {
        return hour - 12;
    }
    return hour;
}

formatPhoneNumber = function (phoneNumber) {
    const phone = phoneNumber.split('');
    const returnNumber = `(${phone[0] + phone[1] + phone[2]}) ${phone[3] + phone[4] + phone[5]}-${phone[6] + phone[7] + phone[8] + phone[9]}`;
    return returnNumber;
}

createHoursString = function (opening, closing) {
    let openTime = `${getHour(opening / 60)}:${pad(opening % 60)} ${am_or_pm(opening / 60)}`;
    let closeTime = `${getHour(closing / 60)}:${pad(closing % 60)} ${am_or_pm(closing)}`;
    return `${openTime} - ${closeTime}`;
}

