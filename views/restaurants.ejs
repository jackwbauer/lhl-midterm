<% include ./partials/_head.ejs %>
<% include ./partials/_header.ejs %>

<div class="container">
  <div class="row">
    <h1>Choose a Restaurant</h1>
    <div class="list-group">
      <% if (locals.restaurants) { %>
        <% locals.restaurants.forEach((restaurant) => { %>
          <div class="list-item">
            <div class="jumbotron col-md-12 restaurant-list-item">
              <div class="col-md-4">
                <img class="restaurant-image" src=<%= restaurant.image_url %> />
              </div>
              <div class="col-md-6">
                <h3><%= restaurant.name %></h3>
                <h4><%= restaurant.description %></h4>
              </div>
              <div class="col-md-2">
                <button data-restaurant-id=<%= restaurant.id %> class="btn btn-primary btn-lg choose-restaurant">Choose This One!</button>
              </div>
            </div>
          </div>
        <% }); %>
      <% } %>
    </div>
  </div>
</div>

<script src="/scripts/restaurants.js"></script>

<% include ./partials/_footer.ejs %>
<% include ./partials/_tail.ejs %>